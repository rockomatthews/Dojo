<div id="wrapper">
    <p>Your Gold:<strong><%= @gold %></strong> </p>

    <div id="places">
        <form action="/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="text" name="building" value="Farm"/>
            <ul>
                <li><strong>Farm</strong></li>
                <li>(earns 10-20 golds)</li>
                <li><input type="submit" value="Find Gold!"/></li>
            </ul>
        </form>
        <form action="/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="text" name="building" value="Cave"/>
            <ul>
                <li><strong>Cave</strong></li>
                <li>(earns 5-10 golds)</li>
                <li><input type="submit" value="Find Gold!"/></li>
            </ul>
        </form>
        <form action="/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="text" name="building" value="House"/>
            <ul>
                <li><strong>House</strong></li>
                <li>(earns 2-5 golds)</li>
                <li><input type="submit" value="Find Gold!"/></li>
            </ul>
        </form>
        <form action="/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="text" name="building" value="Casino"/>
            <ul>
                <li><strong>Casino</strong></li>
                <li>(earns/takes 0-50 golds)</li>
                <li><input type="submit" value="Find Gold!"/></li>
            </ul>
        </form> 
    </div>
    <div id="activities">
        <p>Activities:</p>
        <% @activities.reverse.each do |elem| %>
            <% if elem.include?("collected") %>
                <p class="earned"><%= elem %></p>
            <% else %>
                <p class="lost"><%= elem %></p>
            <% end %>
        <% end %>
    </div>
</div>